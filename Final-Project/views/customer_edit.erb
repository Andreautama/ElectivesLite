</head>
<body>
	<header>
		<div class="header-logo">
			<img id="logo-gofood" src="images/go-food.png" alt="logo gofood" width="30%">
		</div>
		<nav>
			<a href="/menu" >Menu</a> 
			<a href="/customer" class="active">Customer</a> 
			<a href="/category">Category</a> 
			<a href="/order">Order</a>   
		</nav>        
	</header>
	<main>
	<a href="/cart" class ="cart"> 
	<h1> &#128722; </h1> </a> <br>
	<h1 class="main-header">Update Customer</h1>
	<% customers.each do |detail| %>
	
    <form action="/edit-customer/<%= detail.customer_id %>" method="POST" id="update-customer">
		<fieldset>
            <br>
            
                <input type="hidden" name="customer_id" value="<%= detail.customer_id %>">
			    <label for="Name">Change customer name to &nbsp;&nbsp;&nbsp;</label>
				<input type="text"  id="customer-name" name="name" style="height : 30px;" value="<%= detail.name %>"> <br><br>
				<label for="Name">Change phone number to &nbsp;&nbsp;&nbsp;</label>
			    <input type="text"  id="customer-name" name="phone" style="height : 30px;" value="<%= detail.phone %>"> <br><br>
                <input type="Submit" value="Update customer">
		</fieldset>
		<% end %>
	</form>
	</main>
</body>
</html>
